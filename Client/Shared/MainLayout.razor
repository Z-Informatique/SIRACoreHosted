@inherits LayoutComponentBase
@inject NavigationManager navigationManager
@inject StateProviderAuthentication authStateProvider
@inject IDialogService dialogService
@inject ISnackbar snackBar

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="25" Dense="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudDivider Vertical="true" Class="mr-3"/>
        <MudText Typo="Typo.h4">SIRA <AppVersion /></MudText>
        <MudSpacer/>
        <MudText Typo="Typo.subtitle1"><b>S</b>ystème d'<b>I</b>nformation et de <b>R</b>éférencement des <b>A</b>pplications <AppVersion /></MudText>
        <MudSpacer/>
        @if(_show)
        {
            <MudText Typo="Typo.body2" Class="mr-4">USER ID : <strong>@Name</strong></MudText>
            <MudButton Variant="MudBlazor.Variant.Filled" OnClick="@Logout" Size="Size.Small" Color="MudBlazor.Color.Secondary">Déconnexion</MudButton>
        }else
        {
            <MudButton Variant="MudBlazor.Variant.Filled" Href="/auth/login" Size="Size.Small" Color="MudBlazor.Color.Tertiary">Se connecter</MudButton>
        }
        <MudButton Variant="MudBlazor.Variant.Filled" Href="#" Size="Size.Small" Color="MudBlazor.Color.Warning">Statistiques</MudButton>
    </MudAppBar>
    
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            @Body

            <div class="p-4">
                <MudDivider />
                <MudText Class="mt-3" Typo="Typo.caption">@DateTime.Now.Year &copy; SIRA - <AppVersion /></MudText>
            </div>
        </MudContainer>
    </MudMainContent>
</MudLayout>