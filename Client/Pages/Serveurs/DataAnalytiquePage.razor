@inject IServeur serveurService

<MudDialog>
    <DialogContent>
        <RadzenChart>
            @if (!_loading)
            {
                <RadzenColumnSeries Data="@AnalyticsOnline" CategoryProperty="Year" Title="En ligne" LineType="LineType.Dashed" ValueProperty="Count">
                    <RadzenSeriesDataLabels Visible="true" />
                </RadzenColumnSeries>
                <RadzenColumnSeries Data="@AnalyticsMigre" CategoryProperty="Year" Title="Migré" ValueProperty="Count">
                    <RadzenSeriesDataLabels Visible="true" />
                </RadzenColumnSeries>
                <RadzenColumnSeries Data="@AnalyticsDemo" CategoryProperty="Year" Title="Démobilisé" ValueProperty="Count">
                    <RadzenSeriesDataLabels Visible="true" />
                </RadzenColumnSeries>
                <RadzenColumnSeries Data="@AnalyticsMaintenance" CategoryProperty="Year" Title="Maintenance" ValueProperty="Count">
                    <RadzenSeriesDataLabels Visible="true" />
                </RadzenColumnSeries>
                <RadzenValueAxis>
                    <RadzenGridLines Visible="true" />
                    <RadzenAxisTitle Text="Nombre de serveurs" />
                </RadzenValueAxis>
                <RadzenBarOptions Radius="5" />
            }
            else
            {
                <MudProgressCircular Indeterminate="true" Size="Size.Small" Color="Color.Secondary"/>
            }
        </RadzenChart>
    </DialogContent>
</MudDialog>