@inject IApplications applicationService

<MudDialog>
    <DialogContent>
        <RadzenChart style="height: 400px">
            @if (!_loading)
            {
                <RadzenColumnSeries Data="@AnalyticsOnline" CategoryProperty="Year" Title="En ligne" LineType="LineType.Dashed" ValueProperty="Count">
                    <RadzenSeriesDataLabels Visible="@showDataLabels" />
                </RadzenColumnSeries>
                <RadzenColumnSeries Data="@AnalyticsMigre" CategoryProperty="Year" Title="Migrée" ValueProperty="Count">
                    <RadzenSeriesDataLabels Visible="@showDataLabels" />
                </RadzenColumnSeries>
                <RadzenColumnSeries Data="@AnalyticsDemo" CategoryProperty="Year" Title="Démobilisée" ValueProperty="Count">
                    <RadzenSeriesDataLabels Visible="@showDataLabels" />
                </RadzenColumnSeries>
                <RadzenValueAxis>
                    <RadzenGridLines Visible="true" />
                    <RadzenAxisTitle Text="Nombre d'application" />
                </RadzenValueAxis>
                <RadzenBarOptions Radius="5" />
            }
            else
            {
                <MudProgressCircular Indeterminate="true" Size="Size.Small" Color="Color.Secondary"/>
            }
        </RadzenChart>
    </DialogContent>
</MudDialog>